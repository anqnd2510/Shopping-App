extends ../../layouts/default.pug
include ../../mixins/table-tree.pug
include ../../mixins/show-alert.pug

block main
    +alert-error(5000)
    +alert-success(5000)

    if(role.permissions.includes("products-type_view"))
        h1(class="mb-4") Danh mục trang phục


        .card.mb-3
            .card-header Danh sách 
            .card-body
                .row
                    .col-10
                    .col-2
                        if(role.permissions.includes("products-type_create"))
                            a(
                                href=`${prefixAdmin}/products-type/create`
                                class="btn btn-outline-success"
                            ) + Thêm mới

                table(
                    class=".table.table-hover.table-sm"
                    checkbox-multi
                )
                    thead
                        tr
                            th
                                input(
                                    type="checkbox"
                                    name="checkall"
                                )
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Vị trí
                            th Trạng thái
                            th Hành động
                
                    
                    tbody
                        +table-tree(records)

        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/products-type/change-status`
        ) 
                        
        form(
            action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/products-type/delete`
        ) 

    script(src="/admin/js/productAll.js")
    