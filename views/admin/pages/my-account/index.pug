extends ../../layouts/default.pug

block main
    h1(class="mb-4") Thông tin cá nhân

    if (user.avatar)
        img(src=user.avatar width="150px" class="mb-3")
    else
        img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTMrnOAFatUgb6Bxju0BqWXYj47PetD9lgI6Q1JRb0X3HBuIn9hZPwy3mfiAg&s" width="150px" class="mb-3")

    if (user.fullName)
        p Họ tên: <b>#{user.fullName}</b>

    if (user.email)
        p Email: <b>#{user.email}</b>

    if (user.phone)
        p Số điện thoại: <b>#{user.phone}</b>

    p 
        span Trạng thái: 
        span
            <b>#{user.status === "active" ? "Active": "InActive"}</b>

    if (role.title)
        p Phân quyền: <b>#{role.title}</b>

    a(
	    href=`${prefixAdmin}/my-account/edit`
	    class="btn btn-primary"
	) Chỉnh sửa thông tin