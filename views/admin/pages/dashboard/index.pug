extends ../../layouts/default.pug

block main
    h1 Trang homepage

    .row.mt-4 
        .col-12 
            .card.mb-4 
                .card-header Thông tin tài khoản 
                .card-body 
                    if(user.avatar)
                        img(
                            src=user.avatar 
                            style="height: 100px; margin-bottom: 15px;"
                        )
                    if(user.fullName)
                        p Họ tên: <b>#{user.fullName}</b>
                    if(user.email)
                        p Email: <b>#{user.email}</b>
                    if(user.phone)
                        p Số điện thoại: <b>#{user.phone}</b>
                    if(role.title)
                        p Phân quyền: <b>#{role.title}</b>

        .col-6 
            .card.mb-4 
                .card-header Danh mục sản phẩm 
                .card-body
                    p Số lượng: <b>#{statistic.typeProduct.total}</b>
                    p Hoạt động: <b>#{statistic.typeProduct.active}</b>
                    p Dừng hoạt động: <b>#{statistic.typeProduct.inactive}</b>

        .col-6 
            .card.mb-4 
                .card-header Sản phẩm 
                .card-body
                    p Số lượng: <b>#{statistic.product.total}</b>
                    p Hoạt động: <b>#{statistic.product.active}</b>
                    p Dừng hoạt động: <b>#{statistic.product.inactive}</b>

        .col-6 
            .card.mb-4 
                .card-header Tài khoản admin
                .card-body
                    p Số lượng: <b>#{statistic.admin.total}</b>
                    p Hoạt động: <b>#{statistic.admin.active}</b>
                    p Dừng hoạt động: <b>#{statistic.admin.inactive}</b>

        .col-6 
            .card.mb-4 
                .card-header Tài khoản client
                .card-body
                    p Số lượng: <b>#{statistic.client.total}</b>
                    p Hoạt động: <b>#{statistic.client.active}</b>
                    p Dừng hoạt động: <b>#{statistic.client.inactive}</b>